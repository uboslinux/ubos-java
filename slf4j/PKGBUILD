maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_groupId='org.slf4j'
pkgver=1.7.25
pkgrel=3
pkgdesc='Simple logging facade for Java'
arch=('any')
url="http://slf4j.org/"
license=('custom:slf4j')
makedepends=('jdk9-openjdk')
depends=( 
    'java-environment>=8' 
) 
_jar=(
    'log4j-over-slf4j'
    'slf4j-api'
    'slf4j-ext'
    'slf4j-log4j12'
    'slf4j-nop'
    'slf4j-simple'
)

for _j in ${_jar[@]}; do
    source+=(
        "http://search.maven.org/remotecontent?filepath=${_groupId//.//}/${_j}/${pkgver}${_postfix}/${_j}-${pkgver}${_postfix}.jar"
        "http://search.maven.org/remotecontent?filepath=${_groupId//.//}/${_j}/${pkgver}${_postfix}/${_j}-${pkgver}${_postfix}.pom"
    )
    noextract+=(
        "${_j}-${pkgver}.jar"
        "${_j}-${pkgver}.pom"
    )
    releasepage+=(
        "http://search.maven.org/#search%7Cgav%7C1%7Cg%3A%22${_groupId}%22%20AND%20a%3A%22${_j}%22"
    )
done

