package() {
    for _j in ${_jar[@]}; do
        install -m644 -D ${srcdir}/${_j}-${pkgver}${_postfix}.{jar,pom} \
                      -t ${pkgdir}/usr/lib/java/${_groupId//.//}/${_j}/${pkgver}/
    done

    install -m644 -D ${startdir}/LICENSE -t ${pkgdir}/usr/share/licenses/slf4j
}
