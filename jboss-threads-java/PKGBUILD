maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_groupId='org.jboss.threads'
_postfix='.Final'
pkgver=2.3.0
pkgrel=1
pkgdesc='JBoss threads'
arch=('any')
url="http://jboss.org/"
license=('Apache')
depends=( 
    'wildfly-common-java'
) 
_rooturl="http://repo1.maven.org/maven2/${_groupId//.//}"

_modules=(
    jboss-threads
)

source=()
for _m in "${_modules[@]}"; do
    source+=("${_rooturl}/${_m}/${pkgver}${_postfix}/${_m}-${pkgver}${_postfix}.jar");
done

releasepage=(
    'http://search.maven.org/#search%7Cgav%7C1%7Cg%3A%22org.jboss.threads%22%20AND%20a%3A%22jboss-threads%22')
sha512sums=('ba887202119e76223b628de9d47a9bd4ac0159474e4db4e38854826ca530223c66d69eb8b1be078c5cc47e9de71eddaa8c7190e11e70da453bb4cd2da5dc32af')

noextract=("${source[@]##*/}")

package() {
    cd "${srcdir}"

    mkdir -p -m755 ${pkgdir}/usr/lib/java/${_groupId//.//}

    for _m in "${_modules[@]}"; do
        install -D -m644 "${_m}-${pkgver}${_postfix}.jar" "${pkgdir}/usr/lib/java/${_groupId//.//}/${_m}/${pkgver}/${_m}-${pkgver}${_postfix}.jar"
    done
}

