maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_groupId='org.jboss.threads'
_postfix='.Final'
pkgver=2.3.2
pkgrel=2
pkgdesc='JBoss threads'
arch=('any')
url="http://jboss.org/"
license=('Apache')
depends=( 
    'wildfly-common-java'
) 
_rooturl="http://repo1.maven.org/maven2/${_groupId//.//}"

_modules=(
    jboss-threads
)

source=()
for _m in "${_modules[@]}"; do
    source+=("${_rooturl}/${_m}/${pkgver}${_postfix}/${_m}-${pkgver}${_postfix}.jar");
done

releasepage=(
    'http://search.maven.org/#search%7Cgav%7C1%7Cg%3A%22org.jboss.threads%22%20AND%20a%3A%22jboss-threads%22')
sha512sums=('0cab83da3bedc83ca912ad88297941a88aa7c1db168b1436fe18af88833e9d67c66a0c8d1273cae43bf7aa887795bb65738a1cb986645358037ec998c4d7678c')

noextract=("${source[@]##*/}")

package() {
    cd "${srcdir}"

    for _m in "${_modules[@]}"; do
        install -D -m0644 "${_m}-${pkgver}${_postfix}.jar" "${pkgdir}/usr/lib/java/${_groupId//.//}/${_m}/${pkgver}/${_m}-${pkgver}${_postfix}.jar"
    done
}

