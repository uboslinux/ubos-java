maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_name='wildfly-common'
_groupId='org.wildfly.common'
_postfix='.Final'
pkgver=1.3.0
pkgrel=1
pkgdesc='org.wildfly.common'
arch=('any')
url="http://jboss.org/"
license=('Apache')
depends=(
    'java-environment' 
) 
_rooturl="http://repo1.maven.org/maven2/${_groupId//.//}"
source=("${_rooturl}/${_name}/${pkgver}${_postfix}/${_name}-${pkgver}${_postfix}.jar");
releasepage=("http://search.maven.org/#search%7Cgav%7C1%7Cg%3A%22${_groupId}%22%20AND%20a%3A%22${_name}%22")
sha512sums=('f056be6b88a76bf45be9acce60d4e8da0dd1fc24c8d7dc08152e3d735ad23d78a6814082d2dba5d7e00ca9f46f41af26f71133f55d0e5659213e61037e7cdfaf')
noextract=("${source[@]##*/}")

package() {
    install -D -m644 "${_name}-${pkgver}${_postfix}.jar" "${pkgdir}/usr/lib/java/${_groupId//.//}/${_name}/${pkgver}/${_name}-${pkgver}${_postfix}.jar"
}
